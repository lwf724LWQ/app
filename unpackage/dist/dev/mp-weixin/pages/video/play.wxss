/* 作者信息 */
.author-info.data-v-c3cc80f6 {
  margin-top: 30rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
}
.author-avatar.data-v-c3cc80f6 {
  position: relative;
  margin-right: 20rpx;
}
.avatar.data-v-c3cc80f6 {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}
.v-badge.data-v-c3cc80f6 {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 24rpx;
  height: 24rpx;
  background-color: #ffd700;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  font-weight: bold;
  color: #fff;
}
.author-details.data-v-c3cc80f6 {
  display: flex;
  flex-direction: column;
}
.author-name.data-v-c3cc80f6 {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}
.author-location.data-v-c3cc80f6 {
  font-size: 24rpx;
  color: #666;
}

/* 打赏金额选项 */
.reward-options.data-v-c3cc80f6 {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.section-title.data-v-c3cc80f6 {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}
.amount-grid.data-v-c3cc80f6 {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.amount-option.data-v-c3cc80f6 {
  flex: 1;
  min-width: 150rpx;
  padding: 20rpx;
  border: 2rpx solid #3498db;
  border-radius: 16rpx;
  text-align: center;
  background-color: #f8f8f8;
  transition: all 0.3s ease;
}
.amount-option.active.data-v-c3cc80f6 {
  background-color: #3498db;
  color: #fff;
  transform: translateY(-5rpx);
  box-shadow: 0 4rpx 12rpx rgba(52, 152, 219, 0.2);
}
.amount-text.data-v-c3cc80f6 {
  font-size: 28rpx;
  font-weight: bold;
}
.container.data-v-c3cc80f6 {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 视频容器样式 */
.video-container.data-v-c3cc80f6 {
  position: relative;
  width: 100%;
  height: 600rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #000;
  margin-bottom: 20rpx;
}
.video-player.data-v-c3cc80f6 {
  width: 100%;
  height: 100%;
}

/* 播放按钮遮罩层 */
.play-overlay.data-v-c3cc80f6 {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}
.play-button.data-v-c3cc80f6 {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
}
.play-button.data-v-c3cc80f6:active {
  transform: scale(0.9);
}
.video-info.data-v-c3cc80f6 {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.video-title.data-v-c3cc80f6 {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}
.video-author.data-v-c3cc80f6 {
  font-size: 28rpx;
  color: #666;
}

/* 操作按钮区域（点赞和打赏在同一行） */
.action-bar.data-v-c3cc80f6 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  padding: 0 20rpx;
}

/* 点赞区域 */
.like-section.data-v-c3cc80f6 {
  flex: 1;
  margin-right: 20rpx;
}
.like-btn.data-v-c3cc80f6 {
  display: flex;
  align-items: center;
  justify-content: center;
  background: none;
  border: 1rpx solid #e0e0e0;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}
.like-btn.liked.data-v-c3cc80f6 {
  color: #ff4757;
  border-color: #ff4757;
  background-color: rgba(255, 71, 87, 0.1);
}
.like-count.data-v-c3cc80f6 {
  margin-left: 10rpx;
  font-weight: 500;
}

/* 打赏区域 */
.reward-section.data-v-c3cc80f6 {
  flex: 1;
}
.reward-btn.data-v-c3cc80f6 {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ff9500, #ff7300);
  border: none;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 149, 0, 0.3);
  transition: all 0.3s ease;
}
.reward-btn.data-v-c3cc80f6:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(255, 149, 0, 0.2);
}
.reward-text.data-v-c3cc80f6 {
  margin-left: 10rpx;
  font-weight: 500;
}
