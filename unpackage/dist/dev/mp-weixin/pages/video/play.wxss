
.wrapper.data-v-c3cc80f6 {
		min-height: 100vh;
		background-color: #f5f5f5;
}
.navbar.data-v-c3cc80f6 {
		height: 44px;
		background-color: #1677ff;
		color: white;
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 0 16px;
		margin-bottom: 3rpx;
		position: relative;
		z-index: 10;
}
.navbar-left.data-v-c3cc80f6 {
		width: 44px;
		height: 44px;
		display: flex;
		align-items: center;
		justify-content: flex-start;
		z-index: 11;
}
.navbar-left .uni-icons.data-v-c3cc80f6 {
		color: #fff !important;
		font-size: 22px !important;
}
.navbar-title.data-v-c3cc80f6 {
		font-size: 18px;
		font-weight: 500;
		text-align: center;
		position: absolute;
		left: 0;
		right: 0;
		pointer-events: none;
}
.container.data-v-c3cc80f6 {
		padding: 20rpx;
		padding-bottom: 120rpx;
		background-color: #f5f5f5;
}

	/* 视频容器样式 */
.video-container.data-v-c3cc80f6 {
		position: relative;
		width: 100%;
		height: 600rpx;
		border-radius: 0;
		overflow: hidden;
		background-color: #000;
}
.video-player.data-v-c3cc80f6 {
		width: 100%;
		height: 100%;
}

	/* 播放按钮遮罩层 */
.play-overlay.data-v-c3cc80f6 {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-color: rgba(0, 0, 0, 0.3);
		display: flex;
		align-items: center;
		justify-content: center;
		z-index: 10;
}
.play-button.data-v-c3cc80f6 {
		width: 80rpx;
		height: 80rpx;
		background-color: rgba(0, 0, 0, 0.5);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: transform 0.3s ease;
}
.play-button.data-v-c3cc80f6:active {
		transform: scale(0.9);
}

	/* 购买按钮遮罩 */
.buy-overlay.data-v-c3cc80f6 {
		position: absolute;
		bottom: 30rpx;
		right: 30rpx;
		z-index: 11;
}
.buy-button.data-v-c3cc80f6 {
		background-color: #FF9500;
		padding: 12rpx 24rpx;
		border-radius: 8rpx;
}
.buy-text.data-v-c3cc80f6 {
		color: #fff;
		font-size: 26rpx;
		font-weight: 600;
}

	/* 打赏和点赞交互栏 */
.interaction-bar.data-v-c3cc80f6 {
		display: flex;
		padding: 20rpx 0;
		background-color: #fff;
		gap: 40rpx;
		justify-content: center;
}
.reward-interaction.data-v-c3cc80f6,
	.like-interaction.data-v-c3cc80f6 {
		display: flex;
		align-items: center;
		gap: 8rpx;
}
.interaction-text.data-v-c3cc80f6 {
		color: #FF9500;
		font-size: 26rpx;
}
.like-interaction.liked .interaction-text.data-v-c3cc80f6 {
		color: #ff4757;
}

	/* 视频信息卡片 */
.video-info-card.data-v-c3cc80f6 {
		background-color: #fff;
		padding: 30rpx;
}
.info-header.data-v-c3cc80f6 {
		display: flex;
		align-items: center;
		margin-bottom: 30rpx;
}
.author-avatar.data-v-c3cc80f6 {
		width: 60rpx;
		height: 60rpx;
		border-radius: 50%;
		margin-right: 20rpx;
}
.author-info.data-v-c3cc80f6 {
		flex: 1;
}
.author-name.data-v-c3cc80f6 {
		font-size: 28rpx;
		font-weight: 600;
		color: #333;
		display: block;
}
.video-count.data-v-c3cc80f6 {
		font-size: 24rpx;
		color: #999;
}
.header-actions.data-v-c3cc80f6 {
		display: flex;
		gap: 20rpx;
}
.teacher-btn.data-v-c3cc80f6,
	.follow-btn.data-v-c3cc80f6 {
		padding: 8rpx 16rpx;
		font-size: 24rpx;
		border-radius: 8rpx;
}
.teacher-btn.data-v-c3cc80f6 {
		background-color: transparent;
		border: 1rpx solid #FF9500;
		color: #FF9500;
}
.follow-btn.data-v-c3cc80f6 {
		background-color: #FF9500;
		color: #fff;
		border: none;
}

	/* 视频标题区域 */
.video-title-section.data-v-c3cc80f6 {
		display: flex;
		align-items: flex-start;
		gap: 20rpx;
}
.price-tag.data-v-c3cc80f6 {
		background-color: #ff4757;
		padding: 6rpx 12rpx;
		border-radius: 4rpx;
		color: #fff;
		font-size: 24rpx;
		font-weight: 600;
}
.video-title-text.data-v-c3cc80f6 {
		flex: 1;
		font-size: 30rpx;
		font-weight: 600;
		color: #333;
		line-height: 1.5;
}

	/* 底部购买栏 */
.bottom-bar.data-v-c3cc80f6 {
		position: fixed;
		bottom: 0;
		left: 0;
		right: 0;
		display: flex;
		background-color: #fff;
		padding: 20rpx;
		box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}
.bottom-left.data-v-c3cc80f6 {
		display: flex;
		gap: 40rpx;
}
.icon-item.data-v-c3cc80f6 {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 4rpx;
}
.icon-label.data-v-c3cc80f6 {
		font-size: 20rpx;
		color: #666;
}
.bottom-buy-btn.data-v-c3cc80f6 {
		flex: 1;
		background-color: #FF9500;
		color: #fff;
		border: none;
		border-radius: 50rpx;
		font-size: 32rpx;
		font-weight: 600;
		margin-left: 40rpx;
}
